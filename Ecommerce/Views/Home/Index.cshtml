@foreach (var item in Model.categoryinfo)
{
    <div class="row mb-4 ">
        <div class="col-md-12">
            <h4>@item.CategoryName</h4>
        </div>

        @foreach (var item1 in Model.productitem.Where(x => x.CategoryId == item.CategoryName))
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src=@item1.Thumbnail style="height:200px; width:100%;" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item1.ProductName</h5>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-success btn-sm">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart
                        </button>
                        <button type="button" class="btn btn-primary btn-sm float-end">
                            <i class="fa fa-eye"></i> View
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}



